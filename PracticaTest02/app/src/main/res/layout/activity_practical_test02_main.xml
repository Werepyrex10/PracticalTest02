<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="practicaltest02.eim.systems.cs.pub.ro.practicaltest02.PracticalTest02MainActivity">

    <EditText
        android:id="@+id/portText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Port"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/portText"
        android:layout_alignLeft="@+id/portText"
        android:layout_alignRight="@+id/portText"
        android:layout_alignStart="@+id/portText"
        android:layout_below="@+id/portText"
        android:onClick="onStartClick"
        android:text="start" />

    <EditText
        android:id="@+id/queryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/startButton"
        android:layout_alignRight="@+id/startButton"
        android:layout_below="@+id/startButton"
        android:ems="10"
        android:hint="Query"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/queryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/queryText"
        android:layout_alignLeft="@+id/queryText"
        android:layout_alignRight="@+id/queryText"
        android:layout_alignStart="@+id/queryText"
        android:layout_below="@+id/queryText"
        android:onClick="onQueryClick"
        android:text="Query" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/queryButton"
        android:layout_alignLeft="@+id/queryButton"
        android:layout_alignRight="@+id/queryButton"
        android:layout_alignStart="@+id/queryButton"
        android:layout_below="@+id/queryButton"
        android:text="STOP" />

    <EditText
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/stopButton"
        android:layout_alignRight="@+id/stopButton"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="result"
        android:inputType="textPersonName" />
</RelativeLayout>
